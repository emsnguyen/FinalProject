@model IEnumerable<FinalProjectDAL.Models.Product>

    @{
    ViewBag.Title = "Index";
    }
    <div class="banner">
        <div class="container">
            <div class="banner_desc">
                <h1>New Season Arrivals.</h1>
                <h2>Check out all the new trends</h2>
                <div class="button">
                    <a href="Products" class="hvr-shutter-out-horizontal">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
    <div class="content_top">
        <h3 class="m_1">Latest Products</h3>
        <div class="container">
            <div class="box_1">
                <div class="col-md-7">
                    <div class="section group">
                        @foreach (var item in Model)
                        {
                        <div class="col_1_of_3 span_1_of_3 simpleCart_shelfItem">
                            <div class="shop-holder">
                                <div class="product-img">
                                    <a href="Products/Details/@Html.DisplayFor(modelItem => item.ID)">
                                        <img width="225" height="265" src="@Html.DisplayFor(modelItem => item.Image)" class="img-responsive" alt="item4">
                                    </a>
                                    <a href="#" class="button item_add"></a>
                                </div>
                            </div>
                            <div class="shop-content" style="height: 80px;">
                                <div><a href="Products/Details/@Html.DisplayFor(modelItem => item.ID)" rel="tag">@Html.DisplayFor(modelItem => item.Name)</a></div>
                                <h3><a href="Products/Details/@Html.DisplayFor(modelItem => item.ID)">@Html.DisplayFor(modelItem => item.Maker.Name)</a></h3>
                                <span class="amount item_price">@Html.DisplayFor(modelItem => item.Price)đ</span>
                            </div>
                        </div>

                        }
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="col-md-5 row_3">
                    <div class="about-block-content">
                        <div class="border-add"></div>
                        <h4>About Us</h4>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Obcaecati beatae quam voluptatibus deleniti ipsa consequatur!</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                        <p></p>
                    </div>
                    <img src="images/pic9.jpg" class="img-responsive" alt="" />
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
